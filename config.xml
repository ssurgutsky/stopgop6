<?xml version='1.0' encoding='utf-8'?>
<widget id="com.skystairgames.sg6" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Stop Gop 6</name>
    <description>
        Stop Gop 6
    </description>
    <author email="skystairgames@gmail.com" href="http://skystairgames.ru">
        Sky Stair Games Team
    </author>
    <content src="dist/index.html" />
    <preference name="orientation" value="default" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="30" />
    <preference name="AllowInlineMediaPlayback" value="true"/>

    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <gap:plugin name="cordova-plugin-purchase" source="npm" version="9.0.0"></gap:plugin>

    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />

    <platform name="android">
        <icon density="ldpi" src="www/dist/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="www/dist/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="www/dist/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="www/dist/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="www/dist/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/dist/res/icon/android/drawable-xxxhdpi-icon.png" />

	<splash src="www/dist/res/icon/android/splash-port-hdpi.png" density="hdpi"/>
	<splash src="www/dist/res/icon/android/splash-port-ldpi.png" density="ldpi"/>
	<splash src="www/dist/res/icon/android/splash-port-mdpi.png" density="mdpi"/>
	<splash src="www/dist/res/icon/android/splash-port-xhdpi.png" density="xhdpi"/>
	<splash src="www/dist/res/icon/android/splash-port-xxhdpi.png" density="xxhdpi"/>

    </platform>
</widget>
